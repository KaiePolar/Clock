<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.a.clock">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launch"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launch"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Views.Activities.AddTimeActivity"></activity>
        <activity android:name=".Views.Activities.AddAlarmActivity" />
        <activity android:name=".Views.Activities.MainActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <receiver android:name=".AdditionalClasses.AlarmReceiver" />
    </application>

    <uses-permission android:name="android.permission.INTERNET"/>

</manifest>